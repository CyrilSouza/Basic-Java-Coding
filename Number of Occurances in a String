import java.util.*;
class Solution{
    public static void main(String[] args){
        String str = "SamSonite";
        String str1=str.toLowerCase();
        int count = 0;
        char key='s';
        
        for(int i=0; i<str.length(); i++){
            if(str1.charAt(i)==key){
                count++;
            }
        }
        System.out.println(count);  
        
    }
     

}
